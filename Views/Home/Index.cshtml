<div class="d-flex justify-content-center">
    <h4 class="mt-5 titulo-tela">Cadastro de produtos</h4>
</div>

<div class="d-flex justify-content-start">

    <select name="filtros" id="filtros">
        <option value="Nome">Nome</option>
        <option value="Nome">Estoque positivo</option>
        <option value="Nome">Estoque negativo</option>
    </select>

    <input type="text" class="form-control" id="termo-pesquisa" placeholder="Pesquisar...">

    <button class="btn btn-verde botao-pesquisar shadow-none" type="button">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
        </svg>
    </button>
</div>


<div class="area-tabela">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Estoque</th>
                <th scope="col">Valor</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mouse</td>
                <td>2</td>
                <td>25,00</td>
                <td>-</td>
            </tr>
            <tr>
                <th scope="row">1</th>
                <td>Teclado</td>
                <td>2</td>
                <td>25,00</td>
                <td>-</td>
            </tr>
            <tr>
                <th scope="row">1</th>
                <td>Monitor</td>
                <td>2</td>
                <td>25,00</td>
                <td>-</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-end">
    <a class="btn btn-verde shadow-none" asp-action="Index" asp-controller="Cadastro">
        Novo
    </a>
</div>