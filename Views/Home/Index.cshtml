<div class="d-flex justify-content-center">
    <h4 class="mt-5 titulo-tela">Cadastro de produtos</h4>
</div>

<div class="d-flex justify-content-start">

    <select name="filtros" id="filtros">
        <option value="1">Nome</option>
        <option value="2">Estoque positivo</option>
        <option value="3">Estoque negativo</option>
    </select>

    <input type="text" class="form-control" id="termo-pesquisa" placeholder="Pesquisar...">

    <button class="btn btn-verde botao-pesquisar shadow-none" type="button" onclick="Pesquisar()">
